generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  role       String
  first_name String?
  last_name  String?
  email      String?  @unique

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isActive   Boolean  @default(true)
  deletedAt  DateTime?

  surveysCreated    Survey[]           @relation("SurveyCreator")
  surveyAssignments SurveyAssignment[]
  surveyResponses   SurveyResponse[]
}

model Survey {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime 
  createdAt   DateTime  @default(now())
  active      Boolean   @default(true)

  createdById Int
  createdBy   User      @relation("SurveyCreator", fields: [createdById], references: [id])

  questions   SurveyQuestion[]
  assignments SurveyAssignment[]
  responses   SurveyResponse[]

  @@unique([date])
}

model SurveyQuestion {
  id            Int     @id @default(autoincrement())
  surveyId      Int
  questionText  String
  questionType  String
  required      Boolean @default(true)
  order         Int

  survey  Survey @relation(fields: [surveyId], references: [id])
  options SurveyQuestionOption[]
  answers SurveyAnswer[]
}

model SurveyQuestionOption {
  id         Int    @id @default(autoincrement())
  questionId Int
  text       String
  order      Int

  question SurveyQuestion @relation(fields: [questionId], references: [id])

  @@unique([questionId, order])
}

model SurveyAssignment {
  id         Int      @id @default(autoincrement())
  surveyId   Int
  userId     Int
  assignedAt DateTime @default(now())

  survey Survey @relation(fields: [surveyId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([surveyId, userId])
}

model SurveyResponse {
  id              Int      @id @default(autoincrement())
  surveyId        Int
  userId          Int
  updatedAt       DateTime @updatedAt
  tookMedication  Boolean?
  wellbeingRating Int?

  survey  Survey @relation(fields: [surveyId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
  answers SurveyAnswer[]

  @@unique([surveyId, userId])
}

model SurveyAnswer {
  id          Int     @id @default(autoincrement())
  responseId  Int
  questionId  Int
  answerText  String?
  answerValue Int?

  response SurveyResponse @relation(fields: [responseId], references: [id])
  question SurveyQuestion @relation(fields: [questionId], references: [id])

  @@unique([responseId, questionId])
}
